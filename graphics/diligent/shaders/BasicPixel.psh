struct PSInput { 
    float4 Pos   : SV_POSITION;
    float2 UV    : TEXCOORD0;
};

struct PSOutput { 
    float4 Color : SV_TARGET; 
};

Texture2D    t_Albedo;
SamplerState t_Albedo_sampler; // By convention, texture samplers must use the '_sampler' suffix

void main(in PSInput ps_input,
            out PSOutput ps_output)
{
    ps_output.Color = t_Albedo.SampleLevel(
        t_Albedo_sampler, ps_input.UV, 1.0);
}